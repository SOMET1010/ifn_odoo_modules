<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- Séquence pour les UID IFN -->
        <record id="ifn_uid_sequence" model="ir.sequence">
            <field name="name">IFN UID Sequence</field>
            <field name="code">ifn.uid.sequence</field>
            <field name="prefix">IFN-</field>
            <field name="padding">5</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range">True</field>
            <field name="date_range_ids" eval="[(0, 0, {
                'date_from': time.strftime('%Y-01-01'),
                'date_to': time.strftime('%Y-12-31'),
                'number_next': 1,
                'number_next_actual': 1,
            })]"/>
        </record>

        <!-- Séquence pour les codes QR -->
        <record id="ifn_qr_sequence" model="ir.sequence">
            <field name="name">IFN QR Reference Sequence</field>
            <field name="code">ifn.qr.sequence</field>
            <field name="prefix">QR-</field>
            <field name="padding">8</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
            <field name="use_date_range">True</field>
        </record>

        <!-- Séquence pour les numéros de marché -->
        <record id="ifn_market_sequence" model="ir.sequence">
            <field name="name">IFN Market Sequence</field>
            <field name="code">ifn.market.sequence</field>
            <field name="prefix">MKT</field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Séquence pour les numéros de coopérative -->
        <record id="ifn_coop_sequence" model="ir.sequence">
            <field name="name">IFN Cooperative Sequence</field>
            <field name="code">ifn.coop.sequence</field>
            <field name="prefix">COP</field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Séquence pour les zones -->
        <record id="ifn_zone_sequence" model="ir.sequence">
            <field name="name">IFN Zone Sequence</field>
            <field name="code">ifn.zone.sequence</field>
            <field name="prefix">ZONE</field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Séquence pour les catégories de produits -->
        <record id="ifn_category_sequence" model="ir.sequence">
            <field name="name">IFN Product Category Sequence</field>
            <field name="code">ifn.category.sequence</field>
            <field name="prefix">CAT</field>
            <field name="padding">4</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

    </data>
</odoo>