<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <!-- Vue Liste des Marchés -->
        <record id="view_ifn_market_tree" model="ir.ui.view">
            <field name="name">ifn.market.tree</field>
            <field name="model">ifn.market</field>
            <field name="arch" type="xml">
                <tree string="Marchés IFN">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="region"/>
                    <field name="commune"/>
                    <field name="manager_id"/>
                    <field name="phone"/>
                    <field name="coop_count" widget="badge"/>
                    <field name="partner_count" widget="badge"/>
                    <field name="active" widget="boolean_toggle"/>
                </tree>
            </field>
        </record>

        <!-- Vue Recherche des Marchés -->
        <record id="view_ifn_market_search" model="ir.ui.view">
            <field name="name">ifn.market.search</field>
            <field name="model">ifn.market</field>
            <field name="arch" type="xml">
                <search string="Recherche Marchés">
                    <field name="name" string="Nom du marché"/>
                    <field name="code" string="Code"/>
                    <field name="region" string="Région"/>
                    <field name="commune" string="Commune"/>
                    <field name="manager_id" string="Responsable"/>

                    <filter string="Actifs" name="active" domain="[('active', '=', True)]"/>
                    <filter string="Inactifs" name="inactive" domain="[('active', '=', False)]"/>
                    <separator/>
                    <filter string="Avec coopératives" name="with_coops" domain="[('coop_count', '>', 0)]"/>
                    <filter string="Sans coopératives" name="without_coops" domain="[('coop_count', '=', 0)]"/>
                    <separator/>
                    <filter string="Abidjan" name="abidjan" domain="[('region', 'ilike', 'Abidjan')]"/>
                    <filter string="Centre" name="centre" domain="[('region', 'in', ['Bouaké', 'Yamoussoukro'])]"/>
                    <filter string="Nord" name="nord" domain="[('region', 'in', ['Korhogo', 'Boundiali'])]"/>

                    <group expand="0" string="Grouper par">
                        <filter string="Région" name="group_region" context="{'group_by': 'region'}"/>
                        <filter string="Commune" name="group_commune" context="{'group_by': 'commune'}"/>
                        <filter string="Responsable" name="group_manager" context="{'group_by': 'manager_id'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Vue Formulaire des Marchés -->
        <record id="view_ifn_market_form" model="ir.ui.view">
            <field name="name">ifn.market.form</field>
            <field name="model">ifn.market</field>
            <field name="arch" type="xml">
                <form string="Marché IFN">
                    <header>
                        <button name="action_view_coops" type="object" string="Voir Coopératives"
                                class="btn-primary" attrs="{'invisible': [('coop_count', '=', 0)]}"/>
                        <button name="action_view_partners" type="object" string="Voir Partenaires"
                                class="btn-secondary" attrs="{'invisible': [('partner_count', '=', 0)]}"/>
                        <field name="active" widget="boolean_toggle"/>
                    </header>

                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button name="action_view_coops" type="object" class="oe_stat_button" icon="fa-building-o"
                                    attrs="{'invisible': [('coop_count', '=', 0)]}">
                                <field name="coop_count" widget="statinfo" string="Coopératives"/>
                            </button>
                            <button name="action_view_partners" type="object" class="oe_stat_button" icon="fa-users"
                                    attrs="{'invisible': [('partner_count', '=', 0)]}">
                                <field name="partner_count" widget="statinfo" string="Partenaires"/>
                            </button>
                        </div>

                        <group>
                            <group name="general_info">
                                <field name="code" placeholder="Ex: ABJ"/>
                                <field name="name" placeholder="Nom du marché"/>
                                <field name="region" placeholder="Région"/>
                                <field name="commune" placeholder="Commune"/>
                            </group>
                            <group name="contact_info">
                                <field name="manager_id" options="{'no_create': True}"/>
                                <field name="phone" widget="phone"/>
                                <field name="email" widget="email"/>
                            </group>
                        </group>

                        <group name="location_info">
                            <group string="Localisation">
                                <field name="address" placeholder="Adresse complète"/>
                                <field name="partner_latitude" widget="float" digits="(10,6)"/>
                                <field name="partner_longitude" widget="float" digits="(10,6)"/>
                            </group>
                            <group string="Carte">
                                <field name="geo_point" widget="geo_edit_map"/>
                            </group>
                        </group>

                        <notebook>
                            <page string="Description" name="description">
                                <group>
                                    <field name="description" nolabel="1" placeholder="Description du marché, types de produits vendus, etc."/>
                                </group>
                            </page>

                            <page string="Coopératives" name="coops">
                                <field name="coop_ids">
                                    <tree editable="bottom">
                                        <field name="display_name"/>
                                        <field name="manager_name"/>
                                        <field name="phone"/>
                                        <field name="capacity_storage"/>
                                        <field name="active"/>
                                    </tree>
                                </field>
                            </page>

                            <page string="Partenaires" name="partners">
                                <field name="partner_ids">
                                    <tree>
                                        <field name="name"/>
                                        <field name="x_ifn_role"/>
                                        <field name="phone"/>
                                        <field name="email"/>
                                        <field name="x_ifn_profile_status"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>

                    <div class="oe_chatter">
                        <field name="message_follower_ids"/>
                        <field name="activity_ids"/>
                        <field name="message_ids"/>
                    </div>
                </form>
            </field>
        </record>

        <!-- Vue Kanban des Marchés -->
        <record id="view_ifn_market_kanban" model="ir.ui.view">
            <field name="name">ifn.market.kanban</field>
            <field name="model">ifn.market</field>
            <field name="arch" type="xml">
                <kanban string="Marchés IFN" class="o_kanban_small_column">
                    <field name="display_name"/>
                    <field name="code"/>
                    <field name="region"/>
                    <field name="coop_count"/>
                    <field name="partner_count"/>
                    <field name="active"/>
                    <field name="color"/>

                    <templates>
                        <t t-name="kanban-box">
                            <div t-attf-class="oe_kanban_card oe_kanban_global_click #{record.active.raw_value === false ? 'o_kanban_disabled' : ''}">
                                <div class="o_kanban_manage_view_section">
                                    <div class="o_kanban_manage_toggle_section">
                                        <i class="fa fa-ellipsis-v" role="img" aria-label="Manage View" title="Manage View"/>
                                    </div>
                                </div>

                                <div class="o_kanban_card_content">
                                    <div class="o_kanban_primary">
                                        <div class="o_kanban_record_top">
                                            <div class="o_kanban_record_headings">
                                                <strong class="o_kanban_record_title">
                                                    <field name="display_name"/>
                                                </strong>
                                                <div class="o_kanban_record_subtitle text-muted">
                                                    <field name="region"/>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <div class="o_kanban_manage_button_section oe_kanban_color_picker">
                                        <div class="o_kanban_manage_button_section">
                                            <a role="button" name="action_view_coops" type="object" class="btn btn-primary btn-sm"
                                               t-if="record.coop_count.raw_value > 0">
                                                <i class="fa fa-building"/> Coopératives
                                            </a>
                                            <a role="button" name="action_view_partners" type="object" class="btn btn-secondary btn-sm"
                                               t-if="record.partner_count.raw_value > 0">
                                                <i class="fa fa-users"/> Partenaires
                                            </a>
                                        </div>
                                    </div>

                                    <div class="o_kanban_record_bottom">
                                        <div class="oe_kanban_bottom_left">
                                            <div class="row">
                                                <div class="col-6">
                                                    <span class="text-muted">Coopératives:</span>
                                                    <strong><field name="coop_count"/></strong>
                                                </div>
                                                <div class="col-6">
                                                    <span class="text-muted">Partenaires:</span>
                                                    <strong><field name="partner_count"/></strong>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </t>
                    </templates>
                </kanban>
            </field>
        </record>

        <!-- Vue Carte des Marchés -->
        <record id="view_ifn_market_map" model="ir.ui.view">
            <field name="name">ifn.market.map</field>
            <field name="model">ifn.market</field>
            <field name="arch" type="xml">
                <map string="Carte des Marchés IFN">
                    <field name="geo_point"/>
                    <field name="display_name"/>
                    <field name="address"/>
                    <field name="coop_count"/>
                    <field name="partner_count"/>

                    <templates>
                        <div t-name="map-popup">
                            <b><t t-esc="record.display_name.value"/></b><br/>
                            <i class="fa fa-map-marker"/> <t t-esc="record.address.value or 'Non spécifiée'"/><br/>
                            <i class="fa fa-building"/> <t t-esc="record.coop_count.value"/> coopérative(s)<br/>
                            <i class="fa fa-users"/> <t t-esc="record.partner_count.value"/> partenaire(s)
                        </div>
                    </templates>
                </map>
            </field>
        </record>

        <!-- Vue Graphique des Marchés -->
        <record id="view_ifn_market_graph" model="ir.ui.view">
            <field name="name">ifn.market.graph</field>
            <field name="model">ifn.market</field>
            <field name="arch" type="xml">
                <graph string="Statistiques des Marchés">
                    <field name="region"/>
                    <field name="coop_count" type="measure"/>
                    <field name="partner_count" type="measure"/>
                </graph>
            </field>
        </record>

        <!-- Vue Pivot des Marchés -->
        <record id="view_ifn_market_pivot" model="ir.ui.view">
            <field name="name">ifn.market.pivot</field>
            <field name="model">ifn.market</field>
            <field name="arch" type="xml">
                <pivot string="Analyse des Marchés">
                    <field name="region" type="row"/>
                    <field name="commune" type="row"/>
                    <field name="coop_count" type="measure"/>
                    <field name="partner_count" type="measure"/>
                </pivot>
            </field>
        </record>

        <!-- Actions des Marchés -->
        <record id="action_ifn_market" model="ir.actions.act_window">
            <field name="name">Marchés IFN</field>
            <field name="res_model">ifn.market</field>
            <field name="view_mode">tree,kanban,map,form,graph,pivot</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Créer votre premier marché IFN
                </p>
                <p>
                    Les marchés sont les points de vente principaux où les marchands
                    et les coopératives opèrent. Chaque marché peut avoir plusieurs
                    coopératives et partenaires rattachés.
                </p>
            </field>
        </record>

        <record id="action_ifn_market_view_tree" model="ir.actions.act_window.view">
            <field name="sequence" eval="1"/>
            <field name="view_mode">tree</field>
            <field name="view_id" ref="view_ifn_market_tree"/>
            <field name="act_window_id" ref="action_ifn_market"/>
        </record>

        <record id="action_ifn_market_view_kanban" model="ir.actions.act_window.view">
            <field name="sequence" eval="2"/>
            <field name="view_mode">kanban</field>
            <field name="view_id" ref="view_ifn_market_kanban"/>
            <field name="act_window_id" ref="action_ifn_market"/>
        </record>

        <record id="action_ifn_market_view_form" model="ir.actions.act_window.view">
            <field name="sequence" eval="3"/>
            <field name="view_mode">form</field>
            <field name="view_id" ref="view_ifn_market_form"/>
            <field name="act_window_id" ref="action_ifn_market"/>
        </record>

    </data>
</odoo>