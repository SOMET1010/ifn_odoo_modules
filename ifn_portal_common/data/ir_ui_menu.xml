<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Menu IFN dans le backend pour la configuration -->
        <record id="menu_ifn_portal" model="ir.ui.menu">
            <field name="name">IFN</field>
            <field name="web_icon">ifn_portal_common,static/src/img/icons/icon-96.png</field>
            <field name="sequence">100</field>
        </record>

        <!-- Sous-menu Portail -->
        <record id="menu_ifn_portal_config" model="ir.ui.menu">
            <field name="name">Portail</field>
            <field name="web_icon">fa,fa-desktop,theme</field>
            <field name="parent_id" ref="menu_ifn_portal"/>
            <field name="sequence">10</field>
        </record>

        <!-- Menu des paramètres du portail -->
        <record id="menu_ifn_portal_settings" model="ir.ui.menu">
            <field name="name">Paramètres</field>
            <field name="web_icon">fa,fa-cogs,theme</field>
            <field name="parent_id" ref="menu_ifn_portal_config"/>
            <field name="sequence">10</field>
        </record>

        <!-- Menu de gestion des thèmes -->
        <record id="menu_ifn_portal_themes" model="ir.ui.menu">
            <field name="name">Thèmes</field>
            <field name="web_icon">fa,fa-palette,theme</field>
            <field name="parent_id" ref="menu_ifn_portal_config"/>
            <field name="sequence">20</field>
        </record>

        <!-- Menu des rapports portail -->
        <record id="menu_ifn_portal_reports" model="ir.ui.menu">
            <field name="name">Rapports</field>
            <field name="web_icon">fa,fa-chart-bar,theme</field>
            <field name="parent_id" ref="menu_ifn_portal_config"/>
            <field name="sequence">30</field>
        </record>

        <!-- Sous-menu Utilisateurs portail -->
        <record id="menu_ifn_portal_users" model="ir.ui.menu">
            <field name="name">Utilisateurs Portail</field>
            <field name="web_icon">fa,fa-users,theme</field>
            <field name="parent_id" ref="menu_ifn_portal"/>
            <field name="sequence">20</field>
        </record>

        <!-- Menu de gestion des accès -->
        <record id="menu_ifn_portal_access" model="ir.ui.menu">
            <field name="name">Gestion des Accès</field>
            <field name="web_icon">fa,fa-shield-alt,theme</field>
            <field name="parent_id" ref="menu_ifn_portal_users"/>
            <field name="sequence">10</field>
        </record>

        <!-- Menu des préférences utilisateur -->
        <record id="menu_ifn_portal_preferences" model="ir.ui.menu">
            <field name="name">Préférences</field>
            <field name="web_icon">fa,fa-user-cog,theme</field>
            <field name="parent_id" ref="menu_ifn_portal_users"/>
            <field name="sequence">20</field>
        </record>
    </data>
</odoo>