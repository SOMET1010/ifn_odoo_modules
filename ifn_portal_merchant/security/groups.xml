<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <!-- IFN Groups -->
        <record id="ifn_group_merchant" model="res.groups">
            <field name="name">IFN Merchant</field>
            <field name="comment">Group for IFN merchants with portal access</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>

        <record id="ifn_group_manager" model="res.groups">
            <field name="name">IFN Manager</field>
            <field name="comment">Group for IFN managers with administrative access</field>
            <field name="category_id" ref="base.module_category_hidden"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="users" eval="[(4, ref('base.user_admin'))]"/>
        </record>

        <!-- Portal Access Rights -->
        <record id="group_merchant_portal" model="res.groups">
            <field name="name">Merchant Portal Access</field>
            <field name="comment">Access to merchant portal features</field>
            <field name="category_id" ref="base.module_category_portal"/>
            <field name="implied_ids" eval="[(4, ref('base.group_portal'))]"/>
        </record>

    </data>
</odoo>